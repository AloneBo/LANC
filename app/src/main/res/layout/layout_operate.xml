
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:src="@drawable/girl"
            android:scaleType="centerCrop"
            android:id="@+id/iv_parallax_bg"
            />

    <cc.alonebo.lanc.widget.ParallaxLinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:background="@color/bg_gray"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:layout_height="75dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_avatar"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@drawable/ic_avatar_default"
                app:civ_border_width="2dp"
                app:civ_border_color="#fff"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MX 4"
                android:id="@+id/tv_device_name"
                android:maxLines="1"
                android:maxEms="5"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="23sp"
                />
            <ImageView
                android:layout_marginLeft="2dp"
                android:id="@+id/iv_edit_name"
                android:src="@drawable/ic_svg_edit_gray"
                android:layout_width="20dp"
                android:layout_gravity="center_vertical"
                android:layout_height="20dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/bg_gray"/>
        <LinearLayout
            android:background="@drawable/selector_box_item"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_svg_ip_black"
                />
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="192.169.000.001"
                android:id="@+id/tv_device_ip"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="23sp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="15dp"
            android:background="@drawable/selector_box_item"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:weightSum="1">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/svg_ftp_black"
                />
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_ftp_state_des"
                android:text="FTP服务:未开启"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:layout_height="match_parent">
                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/sc_ftp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/selector_box_item"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:id="@+id/ll_ftp_des"
            android:layout_height="55dp">

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ftp_des"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="18sp"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/bg_gray"/>
        <LinearLayout
            android:background="@drawable/selector_box_item"
            android:clickable="true"
            android:id="@+id/ll_setting"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/svg_setting_black"
                />
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置/关于"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="18sp"
                />


            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/ic_svg_more_black"
                    />
            </FrameLayout>
        </LinearLayout>




        <LinearLayout
            android:layout_marginTop="15dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <Button
                android:background="@drawable/selector_box_item"
                android:id="@+id/bt_set_wall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="下载bing壁纸"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <Button
                android:background="@drawable/selector_box_item"
                android:id="@+id/bt_exit_app"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textColor="#aa00"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="退出程序"
                />

        </LinearLayout>


    </cc.alonebo.lanc.widget.ParallaxLinearLayout>
</FrameLayout>